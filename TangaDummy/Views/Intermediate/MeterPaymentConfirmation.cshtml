@model IEnumerable<TangaDummy.Models.ApplicationUser>
@{
    ViewBag.Title = "MeterPaymentConfirmation";
}
<style>
    #wrapper {
        display: flex;
    }

    #left {
        flex: 0 0 65%;
    }

    #right {
        flex: 1;
    }
</style>
<h2>Payment Confirmation</h2>
<div id="IDNo">
   User ID:  @ViewData["ApplicationUser"].ToString()
</div>
<div id="CheckID">
    CheckOUT ID: @ViewData["CheckOutID"].ToString()
</div>

<div id="wrapper">
    <div id="left">
        <img id="myPic" src="~/Images/tick-gif.gif" alt="Alternate Text" />
    </div>
    <div id="right">
        <div><b>Payment Confirmed!!!!</b></div>
    </div>
    <br />
    <br />
    <li>@Html.ActionLink("Back to Meters List", "Index", "WaterMeters")</li>
</div>
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.3.0.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        
        // This optional function html-encodes messages for display in the page.
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>
}

